<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="120dp"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineHeight="30dp"
        android:text="Swipe To Previous\n2/2"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RelativeLayout
            android:id="@+id/the_main_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp">

            <RelativeLayout
                android:id="@+id/atouch_main_dashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:id="@+id/main_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:tooltipText="wifi">

                        <ImageView
                            android:id="@+id/main_1_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/wifi"
                            app:tint="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_2"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:tooltipText="bluetooth">

                        <ImageView
                            android:id="@+id/main_2_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/bluetooth"
                            app:tint="@color/white" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_3"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/main_3_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/portrait"
                            app:tint="@color/white" />


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/main_4"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/main_4_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/location"
                            app:tint="@color/white" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/main_5"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/main_5_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/sound_up"
                            app:tint="@color/white" />


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/main_6"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/main_6_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/airplane"
                            app:tint="@color/white" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_7"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/main_7_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/flash"
                            app:tint="@color/white" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_8"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/main_8_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/sound_down"
                            app:tint="@color/white" />


                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="30dp"
        android:text="Tap an icon to change"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
       />


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>